<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="online.klok.mobpos">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".LoginActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".RegisterActivity">
            <meta-data
            android:name="android.support.PARENT_ACTIVITY"
            android:value=".LoginActivity" />
        </activity>
        <activity android:name=".AdminAreaActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".LoginActivity" />
        </activity>
        <activity android:name=".ManagerAreaActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".LoginActivity" />
        </activity>
        <activity android:name=".UserAreaActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".LoginActivity" />
        </activity>
        <activity android:name=".BillingActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".AdminAreaActivity" />
        </activity>
        <activity android:name=".ReportsActivity" />
        <activity android:name=".MastersActivity" />
        <activity android:name=".SettingsActivity" />
        <activity android:name=".PayCollectActivity"></activity>
    </application>

</manifest>