<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MastersActivity">

    <include
        android:id="@+id/bottom_bar"
        layout="@layout/bottom_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom_bar"
        android:orientation="vertical"
        android:padding="16dp">

        <Button
            android:id="@+id/bCustomers"
            android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Customers" />

    <Button
        android:id="@+id/bItems"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bCustomers"
        android:text="Items" />

    <Button
        android:id="@+id/bBranches"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bItems"
        android:text="Branches" />

    <Button
        android:id="@+id/bCompany"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bBranches"
        android:text="Company" />

    <Button
        android:id="@+id/bAccountType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bCompany"
        android:text="Account Type" />

    <Button
        android:id="@+id/bAlterEntry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bAccountType"
        android:text="Alter Entry" />

    </LinearLayout>

</RelativeLayout>
